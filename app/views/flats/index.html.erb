<div class="bg-white">
  <h1>All our flats (<%= @flats.count %>)</h1>
  <ul class="list-inline">
      <% @flats.each do |flat| %>
        <li class="list-inline-item m-3">
          <div class="card" style="width: 400px;">
            <img src="https://picsum.photos/300/200" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= flat.name %></h2>
              <p class="card-text"><%= flat.address %></p>
              <div class="d-flex">
                <p class="pr-3"><i class="fas fa-users"></i> <%= flat.number_of_guests %></p>
                <p class="px-3"><i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></p>
              </div>
              <%= link_to 'More info', flat_path(flat) %>
            </div>
          </div>
        </li>
      <% end %>
  </ul>
</div>
